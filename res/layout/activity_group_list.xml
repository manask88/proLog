<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GroupListActivity" >

<EditText
        android:id="@+id/editTextNewFollowUpActivityDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Search" >

    </EditText>

   <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/editTextNewFollowUpActivityDate"
       android:layout_below="@+id/editTextNewFollowUpActivityDate"
       android:text="Groups"
       android:textColor="@color/white"
       android:textSize="15dp" />

   <Button
       android:id="@+id/save"
       style="?android:attr/buttonStyleSmall"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_alignRight="@+id/editTextNewFollowUpActivityDate"
       android:layout_alignTop="@+id/textView1"
       android:text="+" />
	 <ExpandableListView
	       android:id="@+id/activityGroupListExpList"
	       android:layout_width="wrap_content"
	       android:layout_height="500dp"
	       android:layout_alignRight="@+id/fragmentInteractionsAddButton"
	       android:layout_below="@+id/fragmentInteractionsAddButton" >
	   </ExpandableListView>

</RelativeLayout>