<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prolog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.prolog.MainActivity"
            android:label="@string/title_activity_add_contact" >
            >
        </activity>
        <activity
            android:name="com.example.prolog.SyncActivity"
            android:label="@string/app_name" 
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="linkedinApiTestCallback"
                    android:scheme="x-oauthflow-linkedin" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.prolog.AddContactActivity"
            android:label="@string/title_activity_add_contact" >
        </activity>
        <activity
            android:name="com.example.prolog.SyncLoadingActivity"
            android:label="@string/title_activity_sync_loading" >
        </activity>
        <activity
            android:name="com.example.prolog.ContactViewActivity"
            android:label="@string/title_activity_contact_view" >
        </activity>
            <activity
            android:name="com.example.prolog.ContactListNewInteractionActivity"
            android:label="@string/title_activity_add_contact" >
        </activity>
        <activity
            android:name="com.example.prolog.ContactListActivity"
            android:label="@string/title_activity_contact_list" >
        </activity>
        <activity
            android:name="com.example.prolog.NewContactActivity"
            android:label="@string/title_activity_new_contact" >
        </activity>
        <activity
            android:name="com.example.prolog.GroupListActivity"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity
            android:name="com.example.prolog.ContactInteractionsActivity"
            android:label="@string/title_activity_contact_interactions" >
        </activity>
        <activity
            android:name="com.example.prolog.MyTabActivity"
            android:label="@string/title_activity_my_tab" >
        </activity>
        <activity
            android:name="com.example.prolog.AddNewContactActivity"
            android:label="@string/title_activity_add_new_contact" >
        </activity>
        <activity
            android:name="com.example.prolog.NewInteracionActivity"
            android:label="@string/title_activity_new_interacion" >
        </activity>
        <activity
            android:name="com.example.prolog.NewFollowUpActivity"
            android:label="@string/title_activity_new_follow_up" >
        </activity>
    </application>

</manifest>