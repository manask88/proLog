<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prolog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity 
            android:name="com.example.prolog.MainActivity" 
            android:label="@string/title_activity_add_contact" >
            >
        </activity>
        <activity
            android:name="com.example.prolog.SyncActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.prolog.AddContactActivity"
            android:label="@string/title_activity_add_contact" >
        </activity>
        <activity
            android:name="com.example.prolog.SyncLoadingActivity"
            android:label="@string/title_activity_sync_loading" >
        </activity>
        <activity
            android:name="com.example.prolog.ContactViewActivity"
            android:label="@string/title_activity_contact_view" >
        </activity>
        <activity
            android:name="com.example.prolog.ContactListActivity"
            android:label="@string/title_activity_contact_list" >
        </activity>
        <activity
            android:name="com.example.prolog.NewContactActivity"
            android:label="@string/title_activity_new_contact" >
        </activity>
        <activity
            android:name="com.example.prolog.GroupListActivity"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity
            android:name="com.example.prolog.ContactInteractionsActivity"
            android:label="@string/title_activity_contact_interactions" >
        </activity>
        <activity
            android:name="com.example.prolog.MyTabActivity"
            android:label="@string/title_activity_my_tab" >
        </activity>
    </application>
</manifest>